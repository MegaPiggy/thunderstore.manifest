{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/malicean/thunderstore.manifest/main/v1/r2modman/schema.json",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/malicean/thunderstore.manifest/main/v1/schema.json"
    }
  ],
  "properties": {
    "author": {
      "type": "string",
      "title": "Author",
      "description": "Author of the mod",
      "pattern": "^[a-zA-Z0-9](?:[a-zA-Z0-9_]*[a-zA-Z0-9])?$",
      "examples": [
        "TestAuthor"
      ]
    }
  }
}
