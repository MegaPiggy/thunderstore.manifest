{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/MegaPiggy/thunderstore.manifest/main/v1/r2modman/schema.json",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/MegaPiggy/thunderstore.manifest/main/v1/schema.json"
    }
  ],
  "examples": [
    {
      "author": "TestAuthor",
      "name": "TestMod",
      "version_number": "1.1.0",
      "website_url": "https://github.com/thunderstore-io",
      "description": "This is a description for a mod. 250 characters max",
      "dependencies": [
        "AshHat-TestDependency-1.0.0"
      ]
    }
  ],
  "properties": {
    "author": {
      "type": "string",
      "title": "Author",
      "description": "Author of the mod",
      "pattern": "^[a-zA-Z0-9](?:[a-zA-Z0-9_]*[a-zA-Z0-9])?$",
      "examples": [
        "TestAuthor"
      ]
    }
  }
}
